<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_artistSlicer_fragmentSearch"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff0000"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Ar"
        app:layout_constraintBottom_toTopOf="@id/rv_fragmentSearch"
        app:layout_constraintEnd_toStartOf="@+id/tv_albumSlicer_fragmentSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ab_fragmentSearch" />

    <TextView
        android:id="@+id/tv_albumSlicer_fragmentSearch"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff0000"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Al"
        app:layout_constraintEnd_toStartOf="@+id/tv_trackSlicer_fragmentSearch"
        app:layout_constraintStart_toEndOf="@id/tv_artistSlicer_fragmentSearch"
        app:layout_constraintTop_toBottomOf="@+id/ab_fragmentSearch" />

    <TextView
        android:id="@+id/tv_trackSlicer_fragmentSearch"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff0000"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Tr"
        app:layout_constraintEnd_toStartOf="@+id/tv_groupSlicer_fragmentSearch"
        app:layout_constraintStart_toEndOf="@+id/tv_albumSlicer_fragmentSearch"
        app:layout_constraintTop_toBottomOf="@+id/ab_fragmentSearch" />

    <TextView
        android:id="@+id/tv_groupSlicer_fragmentSearch"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff0000"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Gr"
        app:layout_constraintEnd_toStartOf="@id/tv_playlistSlicer_fragmentSearch"
        app:layout_constraintStart_toEndOf="@id/tv_trackSlicer_fragmentSearch"
        app:layout_constraintTop_toBottomOf="@+id/ab_fragmentSearch" />

    <TextView
        android:id="@+id/tv_playlistSlicer_fragmentSearch"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff0000"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Pl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_groupSlicer_fragmentSearch"
        app:layout_constraintTop_toBottomOf="@+id/ab_fragmentSearch" />

    <View
        android:id="@+id/ab_fragmentSearch"
        style="@style/ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addButton_fragmentSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragmentSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_artistSlicer_fragmentSearch" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_fragmentSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/ab_fragmentSearch"
        app:layout_constraintEnd_toEndOf="@id/ab_fragmentSearch"
        app:layout_constraintStart_toStartOf="@id/ab_fragmentSearch"
        app:layout_constraintTop_toTopOf="@id/ab_fragmentSearch">

        <TextView
            android:id="@+id/tv_title_fragmentSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Default"
            android:textColor="@color/mcWhite87"
            app:layout_constraintBottom_toBottomOf="@+id/ab_fragmentSearch"
            app:layout_constraintStart_toStartOf="@+id/ab_fragmentSearch"
            app:layout_constraintTop_toTopOf="@+id/ab_fragmentSearch" />

    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>