<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:background="@color/mcWhite87"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_icon_playlistList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/itemIcon"
        android:src="@drawable/ic_help_black_24dp" />

    <TextView
        android:id="@+id/tv_title_playlistList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/gpItemTitle"
        app:layout_constraintStart_toEndOf="@id/iv_icon_playlistList"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_up_playlistList"
        android:text="default"/>

    <ImageView
        android:id="@+id/iv_up_playlistList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_up_playlistList"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintDimensionRatio="1:1"
        android:clickable="true"
        android:src="@drawable/ic_arrow_up_black_24dp" />

    <ImageView
        android:id="@+id/iv_down_playlistList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_up_playlistList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintDimensionRatio="1:1"
        android:clickable="true"
        android:src="@drawable/ic_arrow_down_black_24dp"/>

</android.support.constraint.ConstraintLayout>