<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:background="@color/mcWhite87"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_icon_entityList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/itemIcon"
        android:src="@drawable/ic_help_black_24dp"/>

    <TextView
        android:id="@+id/tv_title_entityList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_icon_entityList"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_other1_entityList"
        style="@style/itemTitle"
        android:text="default"/>

    <TextView
        android:id="@+id/tv_other1_entityList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_icon_entityList"
        app:layout_constraintTop_toBottomOf="@id/tv_title_entityList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_other2_entityList"
        style="@style/itemOther"
        android:text="default"/>

    <TextView
        android:id="@+id/tv_other2_entityList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_icon_entityList"
        app:layout_constraintTop_toBottomOf="@id/tv_other1_entityList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        style="@style/itemOther"
        android:text="default"/>

</android.support.constraint.ConstraintLayout>