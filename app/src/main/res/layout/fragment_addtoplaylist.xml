<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_artistSlicer_fragmentAddToPlaylist"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mcBlack12"
        android:gravity="center"
        android:text="Ar"
        app:layout_constraintBottom_toTopOf="@id/rv_fragmentAddToPlaylist"
        app:layout_constraintEnd_toStartOf="@+id/tv_albumSlicer_fragmentAddToPlaylist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_albumSlicer_fragmentAddToPlaylist"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mcBlack12"
        android:gravity="center"
        android:text="Al"
        app:layout_constraintEnd_toStartOf="@+id/tv_trackSlicer_fragmentAddToPlaylist"
        app:layout_constraintStart_toEndOf="@id/tv_artistSlicer_fragmentAddToPlaylist"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_trackSlicer_fragmentAddToPlaylist"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF0000"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Tr"
        app:layout_constraintEnd_toStartOf="@+id/tv_groupSlicer_fragmentAddToPlaylist"
        app:layout_constraintStart_toEndOf="@+id/tv_albumSlicer_fragmentAddToPlaylist"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_groupSlicer_fragmentAddToPlaylist"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF0000"
        android:gravity="center"
        android:text="Gr"
        app:layout_constraintEnd_toStartOf="@id/tv_playlistSlicer_fragmentAddToPlaylist"
        app:layout_constraintStart_toEndOf="@id/tv_trackSlicer_fragmentAddToPlaylist"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_playlistSlicer_fragmentAddToPlaylist"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mcBlack12"
        android:gravity="center"
        android:text="Pl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_groupSlicer_fragmentAddToPlaylist"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addButton_fragmentAddToPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragmentAddToPlaylist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_artistSlicer_fragmentAddToPlaylist"/>

</android.support.constraint.ConstraintLayout>