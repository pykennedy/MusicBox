<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mcPrimary</item>
        <item name="colorPrimaryDark">@color/mcPrimaryDark</item>
        <item name="colorAccent">@color/mcSecondary</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/mcPrimary</item>
    </style>

    <style name="Tile">
        <item name="android:background">@color/mcGrey300</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TileText1">
        <item name="android:textColor">@color/mcBlack87</item>
    </style>
    
</resources>
